<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :header_string %></title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <div class="navbar">
      <div class="navbar-inner">
        <div class="brand">
          <strong><%= yield :header_string %></strong>
        </div>
        <ul class="nav pull-right">
          <%= content_tag(:li,
                          link_to("Home", root_path),
                          :class => content_for?(:home_link_tag) ? "active" : "") %>
                          
          <%= content_tag(:li,
                          link_to("Help", "#"),
                          :class => content_for?(:help_link_tag) ? "active" : "") %>
                          
          <%= content_tag(:li,
                          link_to("Signup", "/signup"),
                          :class => content_for?(:signup_link_tag) ? "active" : "") %>
        </ul>
      </div>
    </div>
    <div class="container">
      <div class="row">
          <div class="span12">
          <% if flash[:error] %>
            <div class="alert alert-error"><%= flash[:error] %></div>        
          <% end %>
                <% if flash[:success] %>
            <div class="alert alert-success"><%= flash[:success] %></div>        
          <% end %>
        </div>
      </div>
      <div class="row">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
