<!DOCTYPE html>
<html>
  <head>
    <title><%= yield :header_string %></title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <%= render "shared/navigation_bar" %>
    <div class="container">
      <div class="row">
          <div class="span12">
          <% if flash[:error] %>
            <div class="alert alert-error"><%= flash[:error] %></div>        
          <% end %>
                <% if flash[:success] %>
            <div class="alert alert-success"><%= flash[:success] %></div>        
          <% end %>
        </div>
      </div>
      <div class="row">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
